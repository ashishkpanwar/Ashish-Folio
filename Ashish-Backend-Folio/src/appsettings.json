{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./ashishFoliodatabase.db;"
  },
  "Jwt": {
    "Issuer": "ashishbackendFolioApi",
    "Audience": "ashishFrontEndFolioClient",
    "ExpiresMinutes": 60,
    "HashRefreshTokens": true,
    "RefreshTokenDays": 7,
    "SigningKeySecretName": "JwtSigningKey"
  },
  "KeyVault": {
    "VaultUri": "https://myvault.vault.azure.net/"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Messaging": {
    "ServiceBusConn": "ashish-folio-sbm.servicebus.windows.net"
  }
}
